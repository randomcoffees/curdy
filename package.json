{
  "name": "curdy",
  "version": "3.0.0",
  "description": "Generate CRUD controllers for your express application!",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha -R spec --recursive \"./spec/**/*.spec.js\" --exit --timeout 120000",
    "test:watch": "npm test -- --watch",
    "test:debug": "./node_modules/.bin/mocha --inspect --debug-brk -R spec --recursive \"./spec/**/*.spec.js\" --exit",
    "test:debug:watch": "npm run test:debug -- --watch",
    "test:lint": "./node_modules/.bin/eslint .",
    "test:coverage": "./node_modules/.bin/nyc --reporter=html --reporter=text npm test",
    "report:coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hubba/curdy.git"
  },
  "keywords": [
    "crud",
    "express",
    "node",
    "controller"
  ],
  "author": "Edward Andrew Robinson <earobinson@hubba.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hubba/curdy/issues"
  },
  "homepage": "https://github.com/hubba/curdy#readme",
  "devDependencies": {
    "body-parser": "^1.17.2",
    "chai": "^4.1.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.2.0",
    "mocha": "^4.0.1",
    "mockgoose": "^7.3.3",
    "mongoose": "^4.11.3",
    "nyc": "^11.3.0",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2"
  },
  "dependencies": {
    "express": "^4.15.4",
    "jyson": "^3.0.0",
    "lodash": "^4.17.4",
    "q": "^1.5.0"
  },
  "nyc": {
    "exclude": "**/*.spec.js"
  }
}
